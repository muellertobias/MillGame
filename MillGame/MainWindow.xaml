<Window x:Class="MillGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:MillGame.Views"
        xmlns:viewModels="clr-namespace:MillGame.ViewModels"
        xmlns:local="clr-namespace:MillGame"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition  Height="*"/>
        </Grid.RowDefinitions>
        <views:MillView Height="400" Width="400"/>
        <views:GameStatusView Grid.Row="1" Height="200"/>
    </Grid>
</Window>
